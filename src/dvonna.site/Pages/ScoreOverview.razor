@page "/score"
@inherits ScoreOverviewPage

<div class="row">
    @if (Score == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        if (Score.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Speler</th>
                        <th scope="col">Gespeeld</th>
                        <th scope="col">Voor</th>
                        <th scope="col">Tegen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var playerScore in Score)
                    {
                        <tr>
                            <th scope="row">@playerScore.Name</th>
                            <td>@playerScore.NumberOfGamesPlayed</td>
                            <td>@playerScore.PointsWon</td>
                            <td>@playerScore.PointsLost</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Er is nog geen tussenstand bekend.</p>
        }
    }
</div>
