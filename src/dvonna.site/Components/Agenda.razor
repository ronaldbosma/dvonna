@inherits AgendaComponent

@if (PlayDates == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="card border-dark" style="max-width: 35rem;">
        <div class="card-header">
            <img src="css/bootstrap/icons/calendar.svg" alt="calendar" class="icon" />
            Agenda
        </div>

        <!-- Only show next date on smaller devices -->
        <div class="card-body d-sm-none">
            @if (NextPlayDate.HasValue)
            {
                <p class="card-text">
                    The next dart date is @NextPlayDate.Value.ToString("d MMMM").
                </p>
            }
            else
            {
                <p class="card-text">
                    No new dart date has been planned.
                </p>
            }
        </div>

        <!-- Show all dates on larger devices -->
        <ul class="list-group top5 d-none d-sm-block">
            @foreach (var playDate in PlayDates)
            {
                <li class="list-group-item d-flexalign-items-center @(playDate.Date.Date == NextPlayDate ? "active" : "")">
                    @playDate.Date.ToString("d MMMM yyyy")
                </li>

            }
        </ul>
    </div>
}